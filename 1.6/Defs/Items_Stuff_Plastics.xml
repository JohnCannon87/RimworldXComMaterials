<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RecipeDef>
		<defName>Make_BlocksAquaPlastics</defName>
		<label>make aqua plastics</label>
		<description>Uses stone blocks as a disposable kiln/form to produce Aqua Plastics.</description>
    <jobString>Forming Aqua Plastics.</jobString>
    <workAmount>1600</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>StoneBlocks</li>
					</categories>
				</filter>
				<count>50</count>
			</li>
		</ingredients>
		<products>
			<BlocksAquaPlastics>40</BlocksAquaPlastics>
		</products>
		<fixedIngredientFilter>
			<categories>
				<li>StoneBlocks</li>
			</categories>
		</fixedIngredientFilter>
	</RecipeDef>

  <ThingDef ParentName="ResourceBase">
    <defName>BlocksAquaPlastics</defName>
    <label>aqua plastics</label>
    <description>Alien submarines and structures utilise an incredibly strong, flexible and durable material for the majority of their construction. Aqua plastics are complex multi-bonded and Zrbite catalysed materials. Dense, yet light, the substance has strength above even Titanium or Kevlar.</description>
    <graphicData>
      <texPath>Things/Item/Resource/StoneBlocks</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <color>(240,162,0)</color>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <useHitPoints>false</useHitPoints>
    <healthAffectsPrice>false</healthAffectsPrice>
    <statBases>
      <MarketValue>7</MarketValue>
      <Mass>0.3</Mass>
      <StuffPower_Armor_Sharp>0.45</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.9</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>0.25</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>8</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>1</StuffPower_Insulation_Heat>
      <SharpDamageMultiplier>0.9</SharpDamageMultiplier>
      <BluntDamageMultiplier>1.5</BluntDamageMultiplier>
    </statBases>
    <smeltable>true</smeltable>
    <stuffProps>
      <appearance>Metal</appearance>
      <color>(240,162,0)</color>
      <commonality>0.01</commonality>
      <constructEffect>ConstructMetal</constructEffect>
      <isAirtight>true</isAirtight>
      <soundImpactBullet>BulletImpact_Metal</soundImpactBullet>
      <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
      <soundImpactMelee>Pawn_Melee_Punch_HitBuilding_Metal</soundImpactMelee>
      <statFactors>
        <MaxHitPoints>2.8</MaxHitPoints>
        <Beauty>1</Beauty>
        <Flammability>0</Flammability>
        <WorkToMake>2.5</WorkToMake>
        <WorkToBuild>2.5</WorkToBuild>
        <MeleeWeapon_CooldownMultiplier>1.2</MeleeWeapon_CooldownMultiplier>
      </statFactors>
      <categories>
        <li>Stony</li>
        <li>Metallic</li>
      </categories>
    </stuffProps>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
  </ThingDef>

