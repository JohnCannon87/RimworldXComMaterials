<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RecipeDef>
		<defName>Make_BlocksAlienAlloys</defName>
		<label>make alien alloys</label>
		<description>Uses stone blocks as a disposable kiln/form to produce Alien Alloys.</description>
    <jobString>Forming Alien Alloys.</jobString>
    <workAmount>1600</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>StoneBlocks</li>
					</categories>
				</filter>
				<count>50</count>
			</li>
		</ingredients>
		<products>
			<BlocksAlienAlloys>40</BlocksAlienAlloys>
		</products>
		<fixedIngredientFilter>
			<categories>
				<li>StoneBlocks</li>
			</categories>
		</fixedIngredientFilter>
	</RecipeDef>

  <ThingDef ParentName="ResourceBase">
    <defName>BlocksAlienAlloys</defName>
    <label>alien alloys</label>
    <description>Alien craft are constructed from special alloys with unique properties. They are extremely light and durable, and can be moulded by electro-magnetic methods. This material can be reproduced and used in many kinds of manufacturing processes.</description>
    <graphicData>
      <texPath>Things/Item/Resource/StoneBlocks</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <color>(90,80,120)</color>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <useHitPoints>false</useHitPoints>
    <healthAffectsPrice>false</healthAffectsPrice>
    <statBases>
      <MarketValue>7</MarketValue>
      <Mass>0.3</Mass>
      <StuffPower_Armor_Sharp>0.9</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.45</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>0.45</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>2</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>1</StuffPower_Insulation_Heat>
      <SharpDamageMultiplier>1.1</SharpDamageMultiplier>
      <BluntDamageMultiplier>0.9</BluntDamageMultiplier>
    </statBases>
    <smeltable>true</smeltable>
    <stuffProps>
      <appearance>Metal</appearance>
      <color>(90,80,120)</color>
      <commonality>0.01</commonality>
      <constructEffect>ConstructMetal</constructEffect>
      <isAirtight>true</isAirtight>
      <soundImpactBullet>BulletImpact_Metal</soundImpactBullet>
      <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
      <soundImpactMelee>Pawn_Melee_Punch_HitBuilding_Metal</soundImpactMelee>
      <statFactors>
        <MaxHitPoints>2.2</MaxHitPoints>
        <Beauty>1</Beauty>
        <Flammability>0</Flammability>
        <WorkToMake>2.0</WorkToMake>
        <WorkToBuild>2.0</WorkToBuild>
        <MeleeWeapon_CooldownMultiplier>0.7</MeleeWeapon_CooldownMultiplier>
      </statFactors>
      <categories>
        <li>Stony</li>
        <li>Metallic</li>
      </categories>
    </stuffProps>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
  </ThingDef>

</Defs>
