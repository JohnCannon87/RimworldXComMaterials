<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<!-- Adds to asteroids -->
<Operation Class="PatchOperationFindMod">
	<mods>
		<li>Odyssey</li>
	</mods>
<match Class="PatchOperationAdd">
	<xpath>Defs/GenStepDef[defName="Asteroid"]/genStep/mineableCounts</xpath>
    <value>   
    <Elerium_Ore>1~10</Elerium_Ore>
    </value>
	</match>
</Operation>


